<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="mx.edu.ittepic.listeners.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hola, ¿cómo estás?"
        android:textSize="20sp"
        android:textColor="#000"
        android:background="#65a4a496"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:textStyle="italic|bold"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACEPTAR"
        android:textSize="20dp"
        android:padding="20dp"
        android:background="@drawable/ic_launcher_background"/>

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOn="ENCENDIDO"
        android:textOff="APAGADO"
        android:checked="true"/>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="AUTOGUARDADO"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:checked="true"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masculino"
            android:textSize="20dp"
            android:textColor="#FFFFFF"/>

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Femenino"
            android:textSize="20dp"
            android:checked="true"
            android:textColor="#FFFFFF"/>
    </RadioGroup>

    <CheckedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ola k Ase"
        android:textSize="20dp"
        android:checkMark="@android:drawable/btn_star_big_on"
        android:checked="true"
        android:textColor="#FFFFFF"
        android:id="@+id/checkedText"/>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
        android:max="100"
        android:progress="30"
        android:id="@+id/progressBar"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:id="@+id/ratingBar"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="1000"
        android:progress="350"
        android:id="@+id/seekBar"/>

</LinearLayout>
